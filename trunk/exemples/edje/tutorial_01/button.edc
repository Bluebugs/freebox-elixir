part
{
        name: "button";
        mouse_events: 0;
        clip_to: "main_part"; //on "clip" le bouton sur l'element principal
        description
        {
                state: "default" 0.0;
                rel1
                {
                        relative: 0.0  1.0;
                        offset: 16    -104;
                        to: "back"; //on se positionne par rapport a l'image de fond
                }
                rel2
                {
                        relative: 0.0  1.0;
                        offset: 104   -16;
                        to: "back";
                }
                image
                {
                        normal: "button.png";
                }
                visible: 0;
                color: 255 0 0 0;
        }
        description
        {
                state: "visible" 0.0;
                //on h√©rite les proprietes de l'etat "default"
                //on evite alors de reecrire les proprietes qui ne changent pas
                inherit: "default" 0.0;
                visible: 1;
                color: 255 255 255 255;
        }
}
